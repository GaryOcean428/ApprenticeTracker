{
  "*.{js,jsx,ts,tsx}": [
    "eslint --fix --cache --max-warnings=0",
    "prettier --write",
    "tsc-files --noEmit",
    "jest --bail --findRelatedTests"
  ],
  "*.{css,scss}": [
    "prettier --write",
    "stylelint --fix --cache"
  ],
  "*.{json,md,yml,yaml}": [
    "prettier --write"
  ],
  "*.md": [
    "markdownlint --fix"
  ],
  "package.json": [
    "sort-package-json"
  ]
}
